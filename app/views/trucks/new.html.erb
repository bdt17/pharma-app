<h1>New truck</h1>

<%= form_with model: @truck do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :status %><br>
    <%= f.text_field :status %>
  </p>

  <p>
    <%= f.submit "Create Truck" %>
  </p>
<% end %>

<%= link_to "Back to trucks", trucks_path %>
