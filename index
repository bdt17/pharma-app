  <script>
    // Fake animated tracker
    const map = L.map('map').setView([37.7749, -122.4194], 13);
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png').addTo(map);
    
    const truck = L.marker([37.7749, -122.4194], {icon: L.divIcon({className: 'truck-icon', html: 'ðŸšš'})}).addTo(map);
    
    // Animate truck movement
    let pos = 0;
    const moveTruck = () => {
      pos += 0.001;
      truck.setLatLng([37.7749 + Math.sin(pos)*0.01, -122.4194 + Math.cos(pos)*0.01]);
      setTimeout(moveTruck, 1000);
    };
    moveTruck();
  </script>
